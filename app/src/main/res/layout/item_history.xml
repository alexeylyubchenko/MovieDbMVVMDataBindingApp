<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="itemQuery"
            type="alexey.moviedbapp.data.viewmodels.items.ItemRequestHistoryViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/blocks_normal_margin"
        android:layout_marginBottom="1dp"
        android:background="@color/item_history_query_bg_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_text_size_big"
            android:textColor="@color/item_title_text_color"
            android:textStyle="bold|italic"
            android:text="@{itemQuery.historyQ}"/>

    </LinearLayout>

</layout>
